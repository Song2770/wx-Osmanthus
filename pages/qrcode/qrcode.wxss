/* pages/qrcode/qrcode.wxss */
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100vh;
  background-color: #f5f5f5; /* 灰白色背景 */
  position: relative;
}

.qr-code {
  width: 250px;
  height: 250px;
  margin-bottom: 20px;
  box-shadow: 0 4px 32px rgba(0, 0, 0, 0.2);
  border-radius: 15px;
}

.login-prompt {
  color: #333;
  text-align: center;
  margin-top: 20px;
}

.bold {
  font-weight: bold;
  font-size: 24px;
  color: #e15a9c;
}

.progress-bar-container {
  width: 88%;
  height: 24px;
  background-color: #e9ecef;
  border-radius: 8px;
  overflow: hidden;
  margin-top: 14px;
}

.progress-bar {
  height: 150%;
  background-color: #007bff;
  transition: width 1s linear;
}
